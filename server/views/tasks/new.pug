extends ../layouts/application.pug

block header
  = t('views.tasks.new.create')

block content
  +formFor(task)(action=route('tasks') method='post')
    +input(task, 'name', errors)(type="text")

    +input(task, 'description', errors)(type="text")

    +select(task, 'statusId', statuses, errors)

    br

    +select(task, 'executorId', users, errors)

    br

    +selectMultiple(task, 'labels', labels, errors)

    br

    +submit(task)(value=t('views.tasks.new.create'))


